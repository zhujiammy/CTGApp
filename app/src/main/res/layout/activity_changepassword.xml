<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_alignParentTop="true"
        android:id="@+id/layout"
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/line"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp" />

        <RelativeLayout
            android:id="@+id/ChangePassword_rl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/linerlayout_selected"
            android:clickable="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="27dp">

            <TextView
                android:id="@+id/pstv"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:textColor="@color/tv7"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码"
                />

                <EditText
                    android:paddingLeft="10dp"
                    android:background="@color/white"
                    android:layout_toLeftOf="@id/backs"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/pstv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            <CheckBox
                android:button="@null"
                android:background="@drawable/passcheck_select"
                android:id="@+id/backs"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/line"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/linerlayout_selected"
            android:clickable="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="27dp">

            <TextView
                android:id="@+id/qpss"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:textColor="@color/tv7"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认新密码"
                />
            <EditText

                android:paddingLeft="10dp"
                android:background="@color/white"
                android:layout_toLeftOf="@id/eyys"
                android:layout_toRightOf="@id/qpss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <CheckBox
                android:id="@+id/eyys"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/passcheck_select"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/line"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp" />

    </LinearLayout>

</RelativeLayout>