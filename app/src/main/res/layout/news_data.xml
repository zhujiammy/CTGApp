<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/sys_news"
        android:orientation="vertical"
        android:layout_marginTop="4.5dp"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        tools:ignore="MissingConstraints,UselessLeaf">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:background="@drawable/news_selector"
                    android:layout_centerInParent="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_notifications_black_24dp"
                        />

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/top_tv"
                    android:textColor="@color/tv2"
                    android:textSize="16sp"
                    android:layout_width="64dp"
                    android:layout_height="22.5dp"
                    android:text="客服"
                    />
                <TextView
                    android:layout_below="@id/top_tv"
                    android:textSize="13sp"
                    android:textColor="@color/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请问最近你有时间吗......"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/date"
                    android:textColor="@color/tv4"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:text="星期二"
                    />


            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>