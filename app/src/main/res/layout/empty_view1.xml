<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:visibility="gone"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.mcxtzhang.swipemenulib.SwipeMenuLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:id="@+id/select_group"
                android:clickable="true"
                android:background="@drawable/linerlayout_selected"
                android:orientation="vertical"
                android:layout_marginTop="4.5dp"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                tools:ignore="MissingConstraints,UselessLeaf">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/file"
                            android:src="@mipmap/defaulthead"
                            android:layout_centerInParent="true"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:civ_border_overlay="true"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="1dp">
                        </de.hdodenhof.circleimageview.CircleImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/realname"
                            android:textColor="@color/tv2"
                            android:textSize="16sp"
                            android:layout_width="64dp"
                            android:layout_height="22.5dp"
                            android:text="车同轨"
                            />
                        <TextView
                            android:id="@+id/orgname"
                            android:layout_below="@id/realname"
                            android:textSize="13sp"
                            android:textColor="@color/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车同轨科技有限公"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">




                    </RelativeLayout>

                </LinearLayout>



            </LinearLayout>
            <Button
                android:textSize="10sp"
                android:id="@+id/btnUnRead"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/tab_color"
                android:clickable="true"
                android:text="@string/edit"
                android:textColor="@android:color/white"
                tools:ignore="SmallSp" />

            <Button
                android:textSize="10sp"
                android:id="@+id/btnDelete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/del"
                android:text="@string/delete"
                android:textColor="@android:color/white"
                tools:ignore="SmallSp" />
        </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/empty_view_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="没有任何数据哦～"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
